<h2>Lista de Posts</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{ title }}</h4>
            <p>{{ description }}</p>
            <small>{{ category.name }}</small>
            <br>
            <small>Data de Criação: {{ date }}</small>
        </div>
    </div>

{{else}}

    <h4 class="mt-3">Nenhuma Post registrada</h4>

{{/each}}